<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pers.joy.mapper.TeacherMapper">
    <select id="queryTeacherByUsernameAndPassword" resultType="User">
        select no, name from teacher where username=#{username} and password=#{password}
    </select>

    <select id="queryTeacherSum" resultType="String">
        select count(*) from teacher
    </select>

    <select id="queryAllTeacher" resultType="User">
        select * from teacher order by no limit #{begin}, #{pageSize}
    </select>

    <select id="queryTeacherSumByName" resultType="String">
        select count(*) from teacher where name like #{name}
    </select>

    <select id="queryTeacherByName" resultType="User">
        select * from teacher where name like #{name} order by no limit #{begin}, #{pageSize}
    </select>

    <select id="queryTeacherByTNo" resultType="User">
        select * from teacher where no = #{no}
    </select>

    <insert id="insertTeacher">
        insert into teacher values(#{no},#{name},#{department},#{gender},#{birthday},#{username},#{password})
    </insert>

    <update id="updateTeacher">
        update teacher set name=#{name}, department=#{department}, gender=#{gender}, birthday=#{birthday}
        where no = #{no}
    </update>

    <delete id="deleteTeacher">
        delete from teacher where no = #{tNo}
    </delete>
</mapper>
