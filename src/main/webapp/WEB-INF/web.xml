<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- context -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- Servlet -->
    <servlet>
        <servlet-name>CommonServlet</servlet-name>
        <servlet-class>pers.joy.web.CommonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommonServlet</servlet-name>
        <url-pattern>/common</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>pers.joy.web.StudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeacherServlet</servlet-name>
        <servlet-class>pers.joy.web.TeacherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherServlet</servlet-name>
        <url-pattern>/teacher</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdministratorServlet</servlet-name>
        <servlet-class>pers.joy.web.AdministratorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdministratorServlet</servlet-name>
        <url-pattern>/administrator</url-pattern>
    </servlet-mapping>

    <!--servlet-->
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>pers.joy.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/administrator</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>StudentFilter</filter-name>
        <filter-class>pers.joy.filter.StudentFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>StudentFilter</filter-name>
        <url-pattern>/student</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>TeacherFilter</filter-name>
        <filter-class>pers.joy.filter.TeacherFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TeacherFilter</filter-name>
        <url-pattern>/teacher</url-pattern>
    </filter-mapping>

</web-app>
